<table class = " table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Download Link</th>
      <th>Action</th>
    </tr>
  </thead>  
  <tbody>
    <% @resumes.each do |resume| %>
    <tr>
      <td><%= resume.name %></td>
      <td><%= link_to "Download" , resume.attachment_url, class: "btn btn-sm btn-primary", target: "_blank"%></td>
      <td><%=  button_to "Delete", resume, method: :delete, class: "btn btn-danger",data: { confirm: "Are You Sure You Want To Delete #{resume.name}..?" } %>
        <%= link_to 'Show', resume_path(resume), class: "btn btn-primary"   %></td>
      </tr> 
      <% end %>
    </tbody>
  </table>

</br>
</br>

<%= link_to "New Resume", new_resume_path, class: "btn btn-primary" %>
<%= link_to 'Home', root_path, class: "btn btn-primary" %>

<%= form_tag("/is_active", method: "get") do %>
<%= select_tag(:active, options_for_select([['Active', true], ['Inactive', false], ['All', '']], params[:active]), :prompt => 'Status') %>
<%= submit_tag("Search") %>
<% end %>

